block content
  each alert in alerts
    .alert(class=`alert ${alertTypes[alert.type]} alert-dismissible fade show` id=`alert-${alert.id}`)
      i(class=`bi-${icons[alert.type]}`)
      | #{alert.message}
      button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close" onclick=`dismissAlert('${alert.id}')`)

script(src='/javascripts/dismissalert.js')