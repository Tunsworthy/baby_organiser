extends ../layout

block content
  // Pagination Controls
  nav(aria-label='Page navigation')
    ul.pagination.justify-content-center
      // Previous link
      li.page-item(class=currentIndex === 0 ? 'disabled' : '')
        if currentIndex > 0
          a.page-link(href=`/menus/?date=${dates[currentIndex - 1]}`) Previous
        else
          span.page-link Previous
      
      // Current date page indicator
      li.page-item.active
        a.page-link(href=`/menus/?date=${dates[currentIndex]}`)= new Date(dates[currentIndex]).toDateString()
      
      // Next link
      li.page-item(class=currentIndex === dates.length - 1 ? 'disabled' : '')
        if currentIndex < dates.length - 1
          a.page-link(href=`/menus/?date=${dates[currentIndex + 1]}`) Next
        else
          span.page-link Next

  .container
    // Lunch Menu Section
    .row.my-4
      .col-md-6
        h4 Lunch
          .row.pt-3
            each item in menus.Lunch.items
              //- Main container for the input group
              div.input-group
                input.form-control.text-truncate(type="text" value=`${item.name} : ${item.quantity}` readonly) 
                button.btn.btn-outline-secondary(type="button", data-item-id=item.id data-quantity=item.quantity,disabled=item.allocated ? true : false, data-meal-type="Lunch", onclick="updateInventory(this)")
                  i.fas.fa-cart-shopping
                button.btn.btn-outline-secondary(type="button")
                  i.fas.fa-arrow-right-arrow-left

    // Dinner Menu Section
    .row.my-4
      .col-md-6
        h4 Dinner
          .row.g-3.pt-3
            each item in menus.Dinner.items
              //- Main container for the input group
              div.input-group
                input.form-control.text-truncate(type="text" value=`${item.name} : ${item.quantity}` readonly) 
                button.btn.btn-outline-secondary(type="button", data-item-id=item.id data-quantity=item.quantity,disabled=item.allocated ? true : false, data-meal-type="Dinner", onclick="updateInventory(this)")
                  i.fas.fa-cart-shopping
                button.btn.btn-outline-secondary(type="button")
                  i.fas.fa-arrow-right-arrow-left

  script(src="/javascripts/updateInventory.js")
